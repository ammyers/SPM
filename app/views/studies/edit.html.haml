-# edit.html.haml using partial

%h1 Edit Existing Study

= form_tag study_path(@study), :method => :put do

  = label :study, :title, 'Title'
  = text_field :study, :title
  %br
  = label :study, :description, 'Description'
  = text_field :study, :description
  %br
  = label :study, :max_participants, 'Max Number of Participants'
  = text_field :study, :max_participants
  %br
  = label :study, :duration, 'Length of Study'
  = text_field :study, :duration 
  %br
  - @studytimes.each do |st|
    = label :st, :datetime, 'Date and Time'
    = datetime_select :st, :datetime

    = label :st, :location, 'Location'
    = text_field :st, :location
    %br

  = submit_tag 'Update Study Info'

%br
%br
= button_to 'DELETE STUDY', study_path(@study), :method => :delete, :confirm => 'Are you sure?'