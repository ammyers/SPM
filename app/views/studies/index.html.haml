%div#body
  %h1 All Current Studies

  %ul.maincontent#studies
    - @studies.each do |study|
      %li
        %div#top
          %div#left
            - if study.credits == 1
              %p#title= "#{study.title} [#{study.credits} credit]"
            - else
              %p#title= "#{study.title} [#{study.credits} credits]"
            Researchers: 
            - numresearchers = study.researchers.size
            - study.researchers.each do |r|
              - if @me.admin?
                = link_to "#{r.full_name}", user_path(r), { :class => "researcher_link"}
              - else
                = r.full_name
              - numresearchers -= 1
              - if numresearchers > 0
                | 
          %div#right
            Available Times:
            - study.studytimes.each do |t|
              %p#time= t.toString()
        %div#bottom
          %p#description= study.description

          %div#wrapper= link_to "SELECT STUDY: #{study.title}", study_path(study), { :class => "selection_link"}