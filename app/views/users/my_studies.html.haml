-#  This file is app/views/users/my_studies.html.haml

%div#body
  %h1 My Studies

  %ul.maincontent#mystudies
    - @my_studytimes.each do |studytime|
    - s = studytime.study
      %li
        %div#top
          %div#left
            %p#title= s.title
            Researchers: 
            - numresearchers = s.researchers.size
            - s.researchers.each do |r|
              = link_to "#{r.first_name} #{r.last_name}", user_path(r), { :class => "researcher_link"}
              - numresearchers -= 1
              - if numresearchers > 0
                | 
          %div#right
            Time and Location:
            %p#time= studytime.toString()
        %div#bottom
          %p#description= s.description

          %div#wrapper= link_to "LEAVE THIS STUDY", studies_leave_path(:studytime => studytime), { :class => "selection_link"}

  - if @my_studytimes.empty?
    %h2 You are not signed up for any studies
