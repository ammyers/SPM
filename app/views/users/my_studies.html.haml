-#  This file is app/views/movies/my_studies.html.haml
%h1 My Studies

%table#studies
  %thead
    %tr
      %th Title
      %th Researcher
      %th Description
      %th Times
      %th Learn More
  %tbody
    - @studies.each do |study|
      %tr
        %td= study.title 
        %td= study.researcher
        %td= study.description
        %td
          - study.time_slots.each do |t|
            <b>
            = t.time.to_s+", "
            </b>
        %td= link_to "More about #{study.title}", study_path(study)

= link_to 'Add new study', new_study_path
%br
%br
- if @me
  %p= "You are logged in as #{@me.first_name} #{@me.last_name}"
  %p= "Your role is: #{@me.role.upcase}"
  %p= "Your user ID is: #{@me.id}"
- else
  %p You are not currently logged in as anyone!