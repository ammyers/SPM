-#  This file is app/views/movies/my_studies.html.haml
%h1 My Studies

%table#studies
  %thead
    %tr
      %th Title
      %th Description
      %th Time
      %th Learn More
  %tbody
    - @my_studytimes.each do |studytime|
      - s = studytime.study
      %tr
        %td= s.title 
        %td= s.description
        %td= studytime.datetime.strftime("%a %b %d, %Y, %l:%M")
        %td= link_to "More about #{s.title}", study_path(s)

= link_to 'Add new study', new_study_path
%br
%br
- if @me
  %p= "You are logged in as #{@me.first_name} #{@me.last_name}"
  %p= "Your role is: #{@me.role.upcase}"
  %p= "Your user ID is: #{@me.id}"
- else
  %p You are not currently logged in as anyone!