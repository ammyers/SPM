.container-fluid
	.row
		.col-md-3	
			%h2= @user.full_name
			%h5 Role: 
			%h4= @user.role.capitalize
			%h5 Paper Option:
			%h4= @user.paper_yes_or_no
			= form_for @user, method: :put do |u|
				= label :user, :role, 'Role'
				<select name='user[role]'>
				<option value = researcher> Researcher </option>
				<option value = participant> Participant </option>
				<option value = admin> Administrator </option>
				</select>
				%div#wrapper= u.submit "Update User Info"
		.col-md-3
			%h2 <small> Studies signed up for: </small>
			%p= @user.studytimes.size
			- if @havesignedup
				%h2 Studies completed:
				%p= @user.completedstudies.size
				%h2 Study credits completed:
				%p= @user.credits
			- if @user.studytimes.size > 0	
				%h5 Studylist:
				%ul#studylist
					- @user.studytimes.each do |s|
						- study = s.study
						- if @user.completedstudies.exists?(s)
							%li#complete= study.title + " | " + s.toString + " | COMPLETED (#{study.credits} credits)"
						- else
							%li#incomplete= study.title + " | " + s.toString + " | NOT YET COMPLETED (#{study.credits} credits)"
			- if @mine || @admin			
				%h5 Courses enrolled in:
				- if @user.courses.size > 0
					- @user.courses.each do |c|
						%h4= "Section: #{c.section} | Instructor: #{c.instructor}"
						= link_to "Remove Course", users_leavecourse_path(:course => c), :class => 'btn btn-default';
				- else
					%h4 None
				= link_to "Add Course", users_addcourse_path, :class => 'btn btn-default';
				= link_to "Edit Account", edit_user_path(@user), :class => 'btn btn-default';
